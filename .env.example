# ============================================================================
# Telegram Bot Configuration
# ============================================================================
BOT_TOKEN=your_bot_token_from_botfather

# ============================================================================
# School Location
# ============================================================================
SCHOOL_LATITUDE=41.2995
SCHOOL_LONGITUDE=69.2401
RADIUS_METERS=50

# ============================================================================
# Admin Configuration (comma-separated user IDs)
# ============================================================================
ADMIN_USER_IDS=123456789,987654321

# ============================================================================
# Application Settings
# ============================================================================
DEFAULT_LANGUAGE=uz
TIMEZONE=Asia/Tashkent
DB_PATH=attendance.db
LOG_LEVEL=INFO

# ============================================================================
# PHASE 2: Work Schedule Configuration
# ============================================================================

# Work Hours (HH:MM format in 24-hour time)
WORK_START_TIME=08:00
WORK_END_TIME=17:00

# Grace Period (minutes after start time before marking as late)
GRACE_PERIOD_MINUTES=15

# Work Days (1=Monday, 2=Tuesday, ..., 7=Sunday)
# Default: Monday-Friday
WORK_DAYS=1,2,3,4,5

# ============================================================================
# PHASE 2: Notification Timing (minutes before/after work times)
# ============================================================================

# Morning reminder: X minutes before work start time
# Example: 15 minutes before 08:00 = 07:45 reminder
MORNING_REMINDER_MINUTES_BEFORE=15

# Late warning: X minutes after work start time
# Example: 15 minutes after 08:00 = 08:15 warning (if not checked in)
LATE_WARNING_MINUTES_AFTER=15

# Checkout reminder: X minutes before work end time
# Example: 15 minutes before 17:00 = 16:45 reminder
CHECKOUT_REMINDER_MINUTES_BEFORE=15

# Forgotten checkout: X minutes after work end time
# Example: 30 minutes after 17:00 = 17:30 alert (if forgot to check out)
FORGOTTEN_CHECKOUT_MINUTES_AFTER=30

# ============================================================================
# Deployment Notes
# ============================================================================
#
# For local development:
# - Copy this file to .env
# - Fill in your actual values
#
# For Fly.io deployment:
# - Set secrets using flyctl:
#   flyctl secrets set BOT_TOKEN="your_token"
#   flyctl secrets set ADMIN_USER_IDS="123456789"
#   flyctl secrets set WORK_START_TIME="08:00"
#   flyctl secrets set WORK_END_TIME="17:00"
#   ... etc
#
# To update work schedule in production:
#   flyctl secrets set WORK_START_TIME="09:00"
#   flyctl secrets set GRACE_PERIOD_MINUTES="20"
#
# After updating secrets, app will automatically restart with new values.
# ============================================================================
